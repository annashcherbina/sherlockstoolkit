<%= render(partial: 'layouts/error_messages', locals: {object: @image}) %>

<%= form_for(@image, :html => {:multipart => true}) do |f| %>

    <div class="field">
        <%= f.label :folder_id %><br>
        <%= f.collection_select(:folder_id, Folder.all, :id, :name) %>
    </div>
    <div class="field">
        <%= f.label :description %><br>
        <%= f.text_field :description %>
    </div>

    <% if @image.new_record? %>
        <div class="field">
            <%= f.label :file %><br>
            <%= f.file_field(:datafile) %><br>
            <label>Max file size is 32 megabytes for images.</label>
        </div>
    <% end %>

    <div class="actions">
        <%= f.submit %>
    </div>

<% end %>
