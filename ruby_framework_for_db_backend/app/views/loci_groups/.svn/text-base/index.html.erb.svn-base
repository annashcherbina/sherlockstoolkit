<h1>Listing Locus Groups</h1>

<table class="display dataTable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @loci_groups.each do |loci_group| %>
      <tr>
        <td><%= link_to loci_group.name, loci_group %></td>
        <td><%= link_to 'Destroy', loci_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Locus Group', new_loci_group_path %>
