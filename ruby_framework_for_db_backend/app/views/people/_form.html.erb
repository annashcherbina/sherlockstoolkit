<%= render(partial: 'layouts/error_messages', locals: {object: person}) %>

<%= form_for(@person) do |f| %>

    <div class="field">
        <%= f.label :id_code %><br>
        <%= f.text_field :id_code %>
    </div>
    <div class="field">
        <%= f.label :source %><br>
        <%= f.text_field :source %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
