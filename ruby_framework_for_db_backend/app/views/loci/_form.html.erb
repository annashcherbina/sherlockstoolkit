<%= render(partial: 'layouts/error_messages', locals: {object: @locus}) %>

<%= form_for(@locus) do |f| %>

    <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :locus_type %><br>
        <%= f.text_field :locus_type %>
    </div>
    <div class="field">
        <%= f.label :chromosome %><br>
        <%= f.text_field :chromosome %>
    </div>
    <div class="field">
        <%= f.label :region %><br>
        <%= f.text_field :region %>
    </div>
    <div class="field">
        <%= f.label :position %><br>
        <%= f.number_field :position %>
    </div>
    <div class="field">
        <%= f.label :exclude %><br>
        <%= f.check_box :exclude %>
    </div>
    <div class="field">
        <%= f.label :str_unit %><br>
        <%= f.text_field :str_unit %>
    </div>
    <div class="field">
        <%= f.label :flank5 %><br>
        <%= f.text_field :flank5 %>
    </div>
    <div class="field">
        <%= f.label :snp_iub %><br>
        <%= f.text_field :snp_iub %>
    </div>
    <div class="field">
        <%= f.label :flank3 %><br>
        <%= f.text_field :flank3 %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
