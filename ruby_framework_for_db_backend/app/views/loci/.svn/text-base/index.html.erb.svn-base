<h1>Loci
    <%= " for #{Panel.find(params[:panel_id]).description}" if params[:panel_id] && Locus.exists?(params[:panel_id]) %>
</h1>

<table class="display dataTable" cellspacing="0" width="100%">

  <thead>
    <tr>
      <th>Name</th>
      <th>Locus type</th>
      <th>Chromosome</th>
      <th>Region</th>
      <th>Position</th>
      <th>Exclude</th>
      <th>Str unit</th>
      <th>Snp IUB</th>
    </tr>
  </thead>

  <tbody>
    <% @loci.each do |locus| %>
      <tr>
        <td><%= locus.name %></td>
        <td><%= locus.locus_type %></td>
        <td><%= locus.chromosome %></td>
        <td><%= locus.region %></td>
        <td><%= locus.position %></td>
        <td><%= locus.exclude %></td>
        <td><%= locus.str_unit %></td>
        <td><%= locus.snp_iub %></td>
      </tr>
    <% end %>
  </tbody>
</table>