<h1>Kinships</h1>

<table class="display dataTable" cellspacing="0" width="100%">

    <thead>
    <tr>
        <th>Relationship</th>
        <th>Common minor alleles</th>
        <th>Total minor alleles</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <% @kinships.each do |kinship| %>
        <tr>
            <td><%= kinship.relationship_id %></td>
            <td><%= kinship.common_minor_alleles %></td>
            <td><%= kinship.total_minor_alleles %></td>
            <td><%= link_to 'Show', kinship %></td>
            <td><%= link_to 'Edit', edit_kinship_path(kinship) %></td>
            <td><%= link_to 'Destroy', kinship, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

