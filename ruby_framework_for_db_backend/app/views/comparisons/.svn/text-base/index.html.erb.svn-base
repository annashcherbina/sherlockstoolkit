<h1>Comparisons</h1>

<table class="display dataTable" cellspacing="0" width="100%">

    <thead>
    <tr>
        <th>Barcode</th>
        <th>Barcode2</th>
        <th>Tp count</th>
        <th>Fp count</th>
        <th>Fn count</th>
        <th>Tn count</th>
        <th>Ma threshold1</th>
        <th>Ma threshold2</th>
        <th>Rmne</th>
        <th>Likelihood ratio</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <% @comparisons.each do |comparison| %>
        <tr>
            <td><%= comparison.barcode_id %></td>
            <td><%= comparison.barcode2_id %></td>
            <td><%= comparison.tp_count %></td>
            <td><%= comparison.fp_count %></td>
            <td><%= comparison.fn_count %></td>
            <td><%= comparison.tn_count %></td>
            <td><%= comparison.ma_threshold1 %></td>
            <td><%= comparison.ma_threshold2 %></td>
            <td><%= comparison.rmne %></td>
            <td><%= comparison.likelihood_ratio %></td>
            <td><%= link_to 'Show', comparison %></td>
            <td><%= link_to 'Edit', edit_comparison_path(comparison) %></td>
            <td><%= link_to 'Destroy', comparison, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Comparison', new_comparison_path %>
