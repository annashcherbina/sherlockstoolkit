<h1>Points</h1>

<table class="display dataTable" cellspacing="0" width="100%">

    <thead>
    <tr>
        <th>Points</th>
        <th>Image</th>
        <th>Type of point</th>
        <th>Qual</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <% @points.each do |point| %>
        <tr>
            <td><%= point.points_id %></td>
            <td><%= point.image_id %></td>
            <td><%= point.type_of_point %></td>
            <td><%= point.qual %></td>
            <td><%= link_to 'Show', point %></td>
            <td><%= link_to 'Edit', edit_point_path(point) %></td>
            <td><%= link_to 'Destroy', point, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Point', new_point_path %>
