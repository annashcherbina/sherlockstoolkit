<h1>Calls</h1>

<table class="display dataTable" cellspacing="0" width="100%">

  <thead>
    <tr>
      <th>Experiment</th>
      <th>Locus</th>
      <th>Sample</th>
      <th>Minor allele frequency</th>
      <th>Total count</th>
      <th>Forward count</th>
      <th>Is good thresh fifty</th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.experiment %></td>
        <td><%= call.locus %></td>
        <td><%= call.sample %></td>
        <td><%= call.minor_allele_frequency %></td>
        <td><%= call.total_count %></td>
        <td><%= call.forward_count %></td>
        <td><%= call.is_good_thresh_fifty %></td>
      </tr>
    <% end %>
  </tbody>
</table>