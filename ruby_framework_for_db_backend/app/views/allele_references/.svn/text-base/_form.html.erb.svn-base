<%= render(partial: 'layouts/error_messages', locals: {object: @allele_reference}) %>

<%= form_for(@allele_reference) do |f| %>

    <div class="field">
        <%= f.label :locus_id %><br>
        <%= f.number_field :locus_id %>
    </div>
    <div class="field">
        <%= f.label :allele_name %><br>
        <%= f.text_field :allele_name %>
    </div>
    <div class="field">
        <%= f.label :allele_sequence %><br>
        <%= f.text_field :allele_sequence %>
    </div>
    <div class="field">
        <%= f.label :regular_expression %><br>
        <%= f.text_field :regular_expression %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
