<h1>STRs</h1>

<table>
  <thead>
    <tr>
      <th>Experiment</th>
      <th>Primer</th>
      <th>Locus</th>
      <th>Sample</th>
      <th>Name</th>
      <th>Is stutter</th>
      <th>Is novel allele</th>
      <th>Is novel flank</th>
      <th>Novel flank name</th>
      <th>Flank5</th>
      <th>Flank3</th>
      <th>STR call</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @strs.each do |str| %>
      <tr>
        <td><%= str.experiment %></td>
        <td><%= str.primer %></td>
        <td><%= str.locus %></td>
        <td><%= str.sample %></td>
        <td><%= str.name %></td>
        <td><%= str.is_stutter %></td>
        <td><%= str.is_novel_allele %></td>
        <td><%= str.is_novel_flank %></td>
        <td><%= str.novel_flank_name %></td>
        <td><%= str.flank5 %></td>
        <td><%= str.flank3 %></td>
        <td><%= str.str_call %></td>
        <td><%= link_to 'Show', str %></td>
        <td><%= link_to 'Edit', edit_str_path(str) %></td>
        <td><%= link_to 'Destroy', str, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New STR', new_str_path %>
