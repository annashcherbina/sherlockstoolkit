<%= render(partial: 'layouts/error_messages', locals: {object: @attachment}) %>

<%= form_for(@attachment, :html => {:multipart => true}) do |f| %>
    <div class="field">
        <%= f.label :description %><br>
        <%= f.text_field :description %>
    </div>

    <% if @attachment.new_record? %>
        <div class="field">
            <%= f.label :file %><br>
            <%= f.file_field("datafile") %><br>
            <label>Max file size is 100 megabytes for files.</label>
        </div>
    <% end %>

    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
